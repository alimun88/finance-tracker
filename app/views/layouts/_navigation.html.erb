<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    
    <%= link_to 'FinanceTrcker', root_path, class: "nav-logo navbar-brand" %>
    
    <% if current_user %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      
      <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="user-name nav navbar-nav col-md-6">
          <li><%= link_to "My Portfolio", my_portfolio_path  %></li>
          <li><%= link_to "My Profile", edit_registration_path(current_user)  %></li>
          <li><%= link_to "My Friends", my_friends_path  %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right ">
          <li class="user-name text-right">
          <%= link_to my_portfolio_path do %>
          <i class="fa fa-user"></i>
           <%= current_user.full_name.present? ? current_user.full_name : current_user.email %>
          <% end %>
          </li>
          <li class="log-out">
            <%= link_to("Log Out", destroy_user_session_path, class: 'btn btn-xs btn-danger', method: :delete) %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>